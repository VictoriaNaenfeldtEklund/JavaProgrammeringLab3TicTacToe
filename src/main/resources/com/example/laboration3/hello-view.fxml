<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@styles/background.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laboration3.controller.controllerTicTacToe">

    <top>
        <VBox alignment="CENTER" >

            <Label text="TicTacToe" textFill="springgreen">
            <font>
               <Font size="36.0" />
            </font>
            </Label>

            <HBox alignment="CENTER" spacing="10.0" >
                <Label text="Games Played:" textFill="springgreen"/>
                <Label text="${controller.model.gamesPlayed}" textFill="springgreen"/>
            </HBox>
        </VBox>
    </top>

   <center>
       <TilePane alignment="CENTER" hgap="10.0" minWidth="280.0" prefColumns="3" prefRows="3" prefWidth="280.0" stylesheets="@styles/buttonStyle.css" vgap="10.0">

           <Button id="square1" onMouseClicked="#buttonClicked" text="${controller.model.square1}" />
           <Button id="square2" onMouseClicked="#buttonClicked" text="${controller.model.square2}" />
           <Button id="square3" onMouseClicked="#buttonClicked" text="${controller.model.square3}" />
           <Button id="square4" onMouseClicked="#buttonClicked" text="${controller.model.square4}" />
           <Button id="square5" onMouseClicked="#buttonClicked" text="${controller.model.square5}" />
           <Button id="square6" onMouseClicked="#buttonClicked" text="${controller.model.square6}" />
           <Button id="square7" onMouseClicked="#buttonClicked" text="${controller.model.square7}" />
           <Button id="square8" onMouseClicked="#buttonClicked" text="${controller.model.square8}" />
           <Button id="square9" onMouseClicked="#buttonClicked" text="${controller.model.square9}" />

       </TilePane>
   </center>

   <bottom>
       <VBox alignment="CENTER" spacing="10.0">

           <Label text="${controller.model.gameStateMessage}" textFill="springgreen" />

           <HBox alignment="CENTER" spacing="80.0">
               <Label text="PLAYER 1" textFill="hotpink" />
               <Label text="PLAYER 2" textFill="skyblue" />
           </HBox>

           <HBox alignment="CENTER" spacing="150.0">
               <Label text="${controller.model.scorePlayer1}" textFill="hotpink" />
               <Label text="${controller.model.scorePlayer2}" textFill="skyblue"/>
           </HBox>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
       </VBox>
   </bottom>

</BorderPane>
