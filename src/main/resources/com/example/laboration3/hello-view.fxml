<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@styles/background.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laboration3.controller.controllerTicTacToe">

    <top>
        <VBox alignment="CENTER" spacing="10.0">

            <Label text="TicTacToe" textFill="SPRINGGREEN">
            <font>
               <Font size="36.0" />
            </font>
            </Label>

            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Games Played:" textFill="SPRINGGREEN" />
                <Label text="${controller.model.gamesPlayed}" textFill="SPRINGGREEN" />
            </HBox>
         <VBox alignment="CENTER" spacing="10">
               <Label text="Choose your opponent: " textFill="SPRINGGREEN" />
      
               <HBox alignment="CENTER" spacing="10.0">
                   <Button id="computer" onMouseClicked="#startButtonClicked" text="COMPUTER" textFill="#063320" prefWidth="100.0" style="-fx-background-color: SPRINGGREEN">
                       <font>
                           <Font name="Arial" size="12.0" />
                       </font>
                   </Button>
            
                   <Button id="friend" onMouseClicked="#startButtonClicked" text="FRIEND" textFill="#063320" prefWidth="100.0" style="-fx-background-color: SPRINGGREEN" >
                       <font>
                           <Font name="Arial" size="12.0" />
                       </font>
                   </Button>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
               </HBox>
         </VBox>

        </VBox>
    </top>

   <center>
       <TilePane alignment="CENTER" hgap="10.0" minWidth="280.0" prefColumns="3" prefRows="3" prefWidth="280.0" stylesheets="@styles/buttonStyle.css" vgap="10.0">

           <Button id="square1" onMouseClicked="#squareButtonClicked" text="${controller.model.square1}" />
           <Button id="square2" onMouseClicked="#squareButtonClicked" text="${controller.model.square2}" />
           <Button id="square3" onMouseClicked="#squareButtonClicked" text="${controller.model.square3}" />
           <Button id="square4" onMouseClicked="#squareButtonClicked" text="${controller.model.square4}" />
           <Button id="square5" onMouseClicked="#squareButtonClicked" text="${controller.model.square5}" />
           <Button id="square6" onMouseClicked="#squareButtonClicked" text="${controller.model.square6}" />
           <Button id="square7" onMouseClicked="#squareButtonClicked" text="${controller.model.square7}" />
           <Button id="square8" onMouseClicked="#squareButtonClicked" text="${controller.model.square8}" />
           <Button id="square9" onMouseClicked="#squareButtonClicked" text="${controller.model.square9}" />

       </TilePane>
   </center>

   <bottom>
       <VBox alignment="CENTER" spacing="10.0">

           <Label text="${controller.model.gameStateMessage}" textFill="SPRINGGREEN" />

           <HBox alignment="CENTER" spacing="80.0">
               <Label text="${controller.model.namePlayer1}" textFill="hotpink" />
               <Label text="${controller.model.namePlayer2}" textFill="skyblue" />
           </HBox>

           <HBox alignment="CENTER" spacing="150.0">
               <Label text="${controller.model.scorePlayer1}" textFill="hotpink" />
               <Label text="${controller.model.scorePlayer2}" textFill="skyblue" />
           </HBox>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
       </VBox>
   </bottom>

</BorderPane>
